{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_HOST",
    "EXPRESS_PUBLIC_HOST",
    "FARCASTER_DEVELOPER_FID",
    "FARCASTER_DEVELOPER_MNEMONIC"
  ]
}
