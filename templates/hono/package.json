{
  "name": "template-hono",
  "version": "0.0.14",
  "type": "module",
  "private": true,
  "dependencies": {
    "@hono/node-server": "^1.9.0",
    "hono": "^4.1.3",
    "frames.js": "^0.16.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@frames.js/debugger": "^0.2.11",
    "@hono/vite-dev-server": "^0.10.0",
    "@types/node": "^18.17.0",
    "@types/react": "^18.2.45",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "typescript": "^5.4.5",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others \"vite\" \"frames --url http://localhost:5173\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/server.tsx --outDir dist/server",
    "preview": "cross-env-shell NODE_ENV=production \"npm run build && node dist/server/server.js\""
  }
}
